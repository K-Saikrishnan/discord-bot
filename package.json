{
  "name": "discord-bot",
  "version": "1.0.0",
  "description": "Discord Bot using discord.js",
  "main": "./src/index.js",
  "scripts": {
    "bot": "node --env-file=.env build/index.js",
    "bot-dev": "node --env-file=.env build/index.js --watch",
    "build": "tsc --build --clean && tsc",
    "build-dev": "tsc --build --watch",
    "lint": "npx prettier --write . && npx eslint --fix .",
    "lint-dev": "npx prettier --write . && npx eslint --cache --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/K-Saikrishnan/discord-bot.git"
  },
  "author": "K-Saikrishnan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/K-Saikrishnan/discord-bot/issues"
  },
  "homepage": "https://github.com/K-Saikrishnan/discord-bot#readme",
  "dependencies": {
    "discord.js": "^14.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
